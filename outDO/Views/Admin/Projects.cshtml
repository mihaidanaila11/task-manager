<body>
	<div>
		<h2 class="display-2">PROJECT MANAGEMENT</h2>
		<a class="btn btn-success mb-3" asp-controller="Admin" asp-action="GoBack">Go Back</a>
		<hr/>
		<div class="container">
			@foreach (var project in ViewBag.Projects)
		{
		
			<div class="row align-items-center mb-2">
					<div class="col-auto ">
					<h5>@project.Name</h5>
				</div>
					<div class="col text-end ">
						<a class="btn btn-primary" asp-controller="Project" asp-action="Show" asp-route-id="@project.Id">Manage Project</a>
				</div>
			</div>
			<hr/>
		}
		</div>
	</div>
</body>